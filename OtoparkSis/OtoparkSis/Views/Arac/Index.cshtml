@using OtoparkSis.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Tbl_Arac>
@{
    ViewBag.Title = "Araclst";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Araç Listesi</h2>
<table class="table table-hover">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>Araç Sahibi</th>
        <th>Araç Plakası</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Tbl_Musteri.AdSoyad</td>
            <td>@x.Plaka</td>
            <td>
                <br />
                <a href="/Arac/AracSil/@x.Id" class="btn btn-danger">Araç Sil</a>
                <br />
                <a href="/Arac/Getir/@x.Id" class="btn btn-warning">Araç Güncelle</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, kayit => Url.Action("Index", new { kayit }))
<a href="/Arac/AracEkle" class="btn btn-success">Araç Ekle</a>